<!DOCTYPE html>
<html lang="en">
  <head>
    <title>All Services</title>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    <style>
      #searchInput {
        margin-bottom: 20px;
      }
    </style>
  </head>
  <body>
    <nav>
      <div class="container">
        <div class="navbar">
          <h1 id="nav-header">EWA "Mohamed Rajab"</h1>
          <div class="nav-links">
            <a href="/auth/sign-out" class="btn btn-danger">Sign Out</a>
            <a href="/services/dashBoard" class="btn btn-danger">Home</a>
            <a href="/schemes" class="btn btn-danger">All Schemes</a>
          </div>
        </div>
      </div>
    </nav>

    <h1 style="text-align: center">Services Table</h1>

    <div class="container">
      <input
        type="text"
        id="searchInput"
        class="form-control"
        placeholder="Search for any value..."
      />

      <!-- Pagination -->
      <div class="pagination-container">
        <ul class="pagination justify-content-center">
          <% if (totalPages > 1) { %> <% for (let i = startPage; i <= endPage;
          i++) { %>
          <li class="page-item <%= (i === currentPage) ? 'active' : '' %>">
            <a class="page-link" href="?page=<%= i %>"><%= i %></a>
          </li>
          <% } %> <% } %>
        </ul>
      </div>

      <table
        class="table table-bordered table-hover"
        style="text-align: center"
      >
        <thead class="thead-dark">
          <tr>
            <th scope="col">#</th>
            <th scope="col">Scheme Reference</th>
            <th scope="col">Application Number</th>
            <th scope="col">Contractor Name</th>
            <th scope="col">Area</th>
            <th scope="col" class="col-md-2">Action</th>
          </tr>
        </thead>
        <tbody id="servicesTableBody">
          <% populatedSchemes.forEach((populatedScheme, index) => { %>
          <tr>
            <th scope="row"><%= (currentPage - 1) * 30 + index + 1 %></th>
            <!-- 30 items per page -->
            <td><%= populatedScheme.Sch_Ref %></td>
            <td><%= populatedScheme.APPNUMBER %></td>
            <td><%= populatedScheme.ContractorName %></td>
            <td><%= populatedScheme.Area %></td>
            <td>
              <a
                class="btn btn-primary btn-block btn-sm"
                href="/edit/<%= populatedScheme.id %>"
                >Edit</a
              >
              <br />
              <form
                action="/delete/<%= populatedScheme.id %>"
                method="POST"
                style="display: inline"
              >
                <button
                  type="submit"
                  class="btn btn-block btn-danger btn-sm"
                  onclick="return confirm('Are you sure you want to delete this item?');"
                >
                  Delete
                </button>
              </form>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>

    <script>
      $(document).ready(function () {
        $("#searchInput").on("keyup", function () {
          var value = $(this).val().toLowerCase()
          $("#servicesTableBody tr").filter(function () {
            $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
          })
        })
      })
    </script>
  </body>
</html>
