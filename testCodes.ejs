<!DOCTYPE html>
<html lang="en">
  <head>
    ...
  </head>
  <body>
    ...
    <div class="pagination-container">
      <ul class="pagination justify-content-center">
        <% if (totalPages > 1) { %> <% for (var i = 1; i <= totalPages; i++) {
        %>
        <li class="page-item <%= (i === currentPage) ? 'active' : '' %>">
          <a class="page-link" href="?page=<%= i %>"><%= i %></a>
        </li>
        <% } %> <% } %>
      </ul>
    </div>

    <table class="table table-bordered table-hover" style="text-align: center">
      <thead class="thead-dark">
        <tr>
          <th scope="col">#</th>
          <th scope="col">Scheme Reference</th>
          <th scope="col">Application Number</th>
          <th scope="col">Contractor Name</th>
          <th scope="col">Area</th>
          <th scope="col" class="col-md-2">Action</th>
        </tr>
      </thead>
      <tbody>
        <% const start = (currentPage - 1) * 100; %> <% const end = start + 100;
        %> <% populatedSchemes.slice(start, end).forEach((populatedScheme,
        index) => { %>
        <tr>
          <th scope="row"><%= start + index + 1 %></th>
          <td><%= populatedScheme.Sch_Ref %></td>
          <td><%= populatedScheme.APPNUMBER %></td>
          <td><%= populatedScheme.ContractorName %></td>
          <td><%= populatedScheme.Area %></td>
          <td>
            <a class="btn btn-primary btn-block tx-tfm btn-sm">Edit</a>
            <br />
            <form action="" method="POST" style="display: inline">
              <button
                type="submit"
                class="btn btn-block btn-danger tx-tfm btn-sm"
                onclick="return confirm('Are you sure you want to delete this item?');"
              >
                Delete
              </button>
            </form>
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>
    ...
  </body>
</html>
